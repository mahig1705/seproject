{
  "compilerOptions": {
    "target": "ES2020",                 // Modern JS features
    "module": "CommonJS",               // Node.js module system
    "rootDir": "./src",                 // Source folder
    "outDir": "./dist",                 // Compiled JS folder
    "esModuleInterop": true,            // Allows import/export interop
    "forceConsistentCasingInFileNames": true,
    "strict": true,                     // Enables all strict type-checking options
    "skipLibCheck": true,               // Skip type checks for external libraries
    "moduleResolution": "node",         // Resolve modules like Node
    "resolveJsonModule": true,          // Import JSON files
    "sourceMap": true,                  // Generate source maps for debugging
    "noImplicitAny": true,              // Disallow `any` type
    "noUnusedLocals": true,             // Warn for unused locals
    "noUnusedParameters": true,         // Warn for unused parameters
    "allowSyntheticDefaultImports": true,
    "incremental": true,                // Faster builds with incremental compilation
    "types": ["node"],                  // Include Node.js types
    "lib": ["ES2020"]                   // Include ES2020 library features
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
